<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnNative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="native"
        app:layout_constraintBottom_toTopOf="@+id/btnSystemCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btnSystemCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统摄像头"
        app:layout_constraintBottom_toTopOf="@+id/btnUsbCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNative"
         />

    <Button
        android:id="@+id/btnUsbCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USB摄像头"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSystemCamera" />

</android.support.constraint.ConstraintLayout>
